@{
  Layout = "_Layout";
}
@model Library.Models.Book
<h2>Book Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Synopsis): @Html.DisplayFor(model => model.Synopsis)</h3>
@if (@Model.JoinEntities.Count == 0)
{
  <p>This BOOK does not belong to any categories</p>
}
else
{
  <h4>Categories the BOOK belongs to:</h4>
  <ul>
    @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Author.Name</li>
    }
  </ul>
}
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Book", "Edit", new { id = Model.BookId })</p>
<p>@Html.ActionLink("Delete BOOK", "Delete", new { id = Model.BookId })</p>